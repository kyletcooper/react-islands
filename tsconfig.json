{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "node",
		"outDir": "./dist/",
		"jsx": "react-jsx",
		"target": "es2022",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["dist", "node_modules"]
}
